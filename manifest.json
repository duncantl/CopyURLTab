{
	"manifest_version": 2,

	"name": "TabURL2Clipboard",
	"description": "copy the active tab's URL to the clipboard",
	"version": "0.1.0",

	"homepage_url": "https://github.com/duncantl/TabURL2Clipboard",

	"permissions": [
	    "tabs",
	    "clipboardWrite"
	],


       "background": { 
           "scripts": ["background.js"],
	   "persistent": true
       },


       "commands": {
	   "tabURL": {
	       "suggested_key": {
		   "default": "MacCtrl+C"
	       }
	   }	   
       }
}